<%- include('partials/header') %>
<div style="background-color:burlywood; padding: 10%;">
<div class="container mt-5" style="font-family: 'Poppins',sans-serif;">
  <h1 style="color:white;">Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email *</label>
              <input type="email" class="form-control" name="username" required>
            </div>
            <div class="form-group">
              <label for="password">Password *</label>
              <input type="password" class="form-control" name="password" required>
            </div>
            
            <div class="text-center">
              <button   type="submit" class="btn btn-dark">Login</button>
            </div>
            
            
          </form>
          

        </div>
       
      </div>
      <div class="text-left">
        <button style = "margin: 25px 0;" type="submit" class="btn btn-dark outline-light"> <i class="fas fa-key fa-x "></i> Forgot Password</button>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
      </div>
    </div>

  </div>
</div>
</div>
<%- include('partials/footer') %>