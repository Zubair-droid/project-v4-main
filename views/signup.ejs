<%- include('partials/header') %>
<div style= "background: burlywood; padding: 10%;">
<div class="container mt-5"  style="font-family: 'Poppins',sans-serif;">
    <h1 style="color: white;">Register</h1>
  
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
  
            <!-- Makes POST request to /register route -->
            <form action="/signup" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username" required >
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" required> 
              </div>
              <div class="form-group">
                <label for="text">Contact</label>
                <input type="text" class="form-control" name="contact" required>
              </div>
              
              <div class="text-center">
                <button  type="submit" class="btn btn-dark">Register</button>
              </div>
              
            </form>
  
          </div>
        </div>
      </div>
      <hr>
    
      <div class="col-sm-4">
        <div class="card" style="margin: 25px 0;">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign Up with Google
            </a>
          </div>

          
        </div>

        <div class = "text-center" style="margin-top: 50px;">  
          <p>Already a member? </p>
          <a href="/login"><button type = "submit" class="btn btn-lg btn-dark">login</button></a> 

         </div>
     
      </div>
  
    </div>
  </div>
</div>
  <%- include('partials/footer') %>